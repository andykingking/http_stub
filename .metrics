MetricFu.configuration.configure_metrics.each do |metric|
  if metric.name == :cane
    metric.enabled     = true
    metric.abc_max     = 10
    metric.line_length = 120
    metric.no_doc      = 'y'
    metric.no_readme   = 'y'
  elsif metric.name ==  :reek
    metric.enabled             = true
    metric.config_file_pattern = 'config/reek.yml'
  elsif metric.name == :roodi
    metric.enabled      = true
    metric.roodi_config = 'config/roodi.yml'
  else
    metric.enabled = false
  end
end
